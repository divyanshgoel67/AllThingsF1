<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:clickable="true"
    android:focusable="true"
    >
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:elevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/race_results_background_drawable"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grand_prix"
                android:text="Australian Grand Prix"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/theme_red"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Albert Park Grand Prix Circuit"
                android:id="@+id/circuit_name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="9dp"
                android:textColor="@android:color/white"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/grand_prix"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/first_divider"
                android:background="@android:color/white"
                android:layout_below="@id/circuit_name"
                android:layout_marginTop="7dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_below="@id/first_divider"
                android:layout_marginTop="7dp"
                android:id="@+id/p1_container"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_1"
                    android:text="1."
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_red"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/p1_driver_name"
                    android:text="Lewis Hamilton"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/p1_race_time"
                    android:text="1:42:34:345"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="right"
                    android:layout_marginRight="20dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/second_divider"
                android:background="@color/theme_red"
                android:layout_below="@+id/p1_container"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_below="@id/second_divider"
                android:layout_marginTop="7dp"
                android:id="@+id/p2_container"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_2"
                    android:text="2."
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_red"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/p2_driver_name"
                    android:text="Valterri Bottas"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/p2_race_time"
                    android:text="+8.200s"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="right"
                    android:layout_marginRight="20dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/third_divider"
                android:background="@color/theme_red"
                android:layout_below="@+id/p2_container"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_below="@id/third_divider"
                android:layout_marginTop="7dp"
                android:id="@+id/p3_container"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_3"
                    android:text="3."
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_red"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/p3_driver_name"
                    android:text="Max Verstappen"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/p3_race_time"
                    android:text="+1.200s"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="right"
                    android:layout_marginRight="20dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>