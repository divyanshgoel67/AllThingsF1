<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/contracted_view"
        app:constraintSetEnd="@id/expanded_view"
        app:duration="300"
        app:motionInterpolator="linear">

        <OnClick app:clickAction="transitionToEnd" app:targetId="@id/expand_results"/>

    </Transition>

    <Transition
        app:constraintSetEnd="@id/contracted_view"
        app:constraintSetStart="@id/expanded_view"
        app:duration="300"
        app:motionInterpolator="linear">

        <OnClick app:clickAction="transitionToEnd" app:targetId="@id/compress_results"/>

    </Transition>


    <ConstraintSet
        android:id="@+id/contracted_view">
        <Constraint android:id="@+id/fourth_divider" android:visibility="gone"/>
        <Constraint android:id="@+id/p4_container" android:visibility="gone"/>
        <Constraint android:id="@+id/fifth_divider" android:visibility="gone"/>
        <Constraint android:id="@+id/p5_container" android:visibility="gone"/>
        <Constraint android:id="@+id/sixth_divider_divider" android:visibility="gone"/>
        <Constraint android:id="@+id/p6_container" android:visibility="gone"/>
        <Constraint android:id="@+id/seventh_divider_divider" android:visibility="gone"/>
        <Constraint android:id="@+id/p7_container" android:visibility="gone"/>
        <Constraint android:id="@+id/eighth_divider_divider" android:visibility="gone"/>
        <Constraint android:id="@+id/p8_container" android:visibility="gone"/>
        <Constraint android:id="@+id/ninth_divider_divider" android:visibility="gone"/>
        <Constraint android:id="@+id/p9_container" android:visibility="gone"/>
        <Constraint android:id="@+id/tenth_divider" android:visibility="gone"/>
        <Constraint android:id="@+id/p10_container" android:visibility="gone"/>
        <Constraint android:id="@+id/compress_results" android:visibility="gone"/>
        <Constraint android:id="@+id/expand_results" android:visibility="visible"/>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/expanded_view">
        <Constraint android:id="@+id/fourth_divider" android:visibility="visible"/>
        <Constraint android:id="@+id/p4_container" android:visibility="visible"/>
        <Constraint android:id="@+id/fifth_divider" android:visibility="visible"/>
        <Constraint android:id="@+id/p5_container" android:visibility="visible"/>
        <Constraint android:id="@+id/sixth_divider_divider" android:visibility="visible"/>
        <Constraint android:id="@+id/p6_container" android:visibility="visible"/>
        <Constraint android:id="@+id/seventh_divider_divider" android:visibility="visible"/>
        <Constraint android:id="@+id/p7_container" android:visibility="visible"/>
        <Constraint android:id="@+id/eighth_divider_divider" android:visibility="visible"/>
        <Constraint android:id="@+id/p8_container" android:visibility="visible"/>
        <Constraint android:id="@+id/ninth_divider_divider" android:visibility="visible"/>
        <Constraint android:id="@+id/p9_container" android:visibility="visible"/>
        <Constraint android:id="@+id/tenth_divider" android:visibility="visible"/>
        <Constraint android:id="@+id/p10_container" android:visibility="visible"/>
        <Constraint android:id="@+id/compress_results" android:visibility="visible"/>
        <Constraint android:id="@+id/expand_results" android:visibility="gone"/>
    </ConstraintSet>

</MotionScene>
